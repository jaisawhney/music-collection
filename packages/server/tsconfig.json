{
  "ts-node": {
    "esm": true
  },
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES6",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "Node",
    "skipLibCheck": true
  },
  "include": ["src"]
}
